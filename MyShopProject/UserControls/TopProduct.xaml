<UserControl x:Class="MyShopProject.UserControls.TopProduct"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             x:Name="topProduct">
    <ListViewItem Style="{DynamicResource ListViewItemStyle1}" BorderThickness="0 1 0 0" BorderBrush="#2c3a54" Padding="0 10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>

            <Image Source="{Binding ElementName=topProduct, Path=Flag}" Width="30" Height="20" Stretch="Fill" Margin="5"/>
            <TextBlock Text="{Binding ElementName=topProduct, Path=ProductName}" Grid.Column="1" Foreground="#efefef" VerticalAlignment="Center" Margin="5"/>
            <TextBlock Text="{Binding ElementName=topProduct, Path=Price}" Grid.Column="2" Foreground="#b1b6db" VerticalAlignment="Center" Margin="10"/>
            <TextBlock Text="{Binding ElementName=topProduct, Path=Quantity}" Grid.Column="3" Foreground="#b1b6db" VerticalAlignment="Center" Margin="10"/>
        </Grid>
    </ListViewItem>
</UserControl>

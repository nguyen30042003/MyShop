<Window  x:Class="MyShopProject.Pages.CreateOrder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyShopProject.Pages"
             xmlns:uc="clr-namespace:MyShopProject.UserControls"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
         Height="760" Width="1280" Background="#151f2d"
            >
    <Grid>

        <Border Style="{StaticResource mainBorder}"   Background="#151f2d" Margin="20 10 20 10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="1" Grid.ColumnSpan="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="77*"/>
                        <ColumnDefinition Width="34*"/>
                        <ColumnDefinition Width="30*"/>
                        <ColumnDefinition Width="109*"/>
                        <ColumnDefinition Width="951*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="ORDER" Foreground="White" TextAlignment="Center" FontSize="40" Grid.ColumnSpan="5"/>
                </Grid>
                <Border Margin="10 10 30 0" Grid.Row="2" Grid.Column="0" Style="{StaticResource mainBorder}" CornerRadius="5" >
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Foreground="#ffffff" Grid.Row="0" TextAlignment="Center" Text="Information Customer"  FontSize="20" HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="0 30 0 0">
                            <TextBlock Foreground="#ffffff" Text=" Full Name" VerticalAlignment="Center"/>
                            <ComboBox 
                            ItemsSource="{Binding customers}" SelectedItem="{Binding customer}"  Margin="5 0 0 0" Width="350">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Full_Name}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel  Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0 30 0 0">
                            <TextBlock Foreground="#ffffff" Text="    Address " VerticalAlignment="Center"/>
                            <TextBox Style="{StaticResource customTextbox}" Text="{Binding address}" Width="350"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center" Margin="0 30 0 0">
                            <TextBlock Foreground="#ffffff" Text="    Phone   " VerticalAlignment="Center"/>
                            <TextBox Style="{StaticResource customTextbox}" Text="{Binding customer.Phone}" Width="350"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Border Margin="30 10 10 0" Grid.Row="2" Grid.Column="2"  Style="{StaticResource mainBorder}" CornerRadius="5" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" TextAlignment="Center" Text="Product" Foreground="#ffffff" FontSize="20" HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="0 30 0 0">
                            <TextBlock Foreground="#ffffff" Text="Product Name" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cbx"
                            ItemsSource="{Binding products}"  SelectedItem="{Binding product}"  Margin="5 0 0 0" Width="350">
                                    <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center" Margin="0 30 0 0">
                            <TextBlock Foreground="#ffffff" Text="              Price" VerticalAlignment="Center"/>
                            <TextBox Style="{StaticResource customTextbox }" Text="{Binding product.PriceSale}" Margin="5 0 0 0" Width="350"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0 30 0 0">
                            <TextBlock Foreground="#ffffff" Text="         Quantity " VerticalAlignment="Center"/>
                            <TextBox Style="{StaticResource customTextbox}" Text="{Binding quantity}" Width="350"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Center" Margin="0 30 0 0">
                            <uc:CustomButton ClickCommand="{Binding addProduct_Click}" nameButton="Add Product" VerticalAlignment="Stretch" Width="100"/>
                            <uc:CustomButton ClickCommand="{Binding payment_Click}" nameButton="PAY"  Width="100"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Margin="10,10,431,0" Grid.Row="3" Grid.Column="0" Style="{StaticResource mainBorder}" CornerRadius="5" Grid.ColumnSpan="2" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" TextAlignment="Center" Text="List Product" Foreground="#ffffff" FontSize="20" HorizontalAlignment="Center"/>
                        <DataGrid ItemsSource="{Binding items}" Grid.Row="1" AutoGenerateColumns="False" Background="#1e2e44" Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}" x:Name="membersDataGrid">
                            <DataGrid.Columns>

                                <DataGridTextColumn Header="ID Product" IsReadOnly="True" CanUserResize="False" Width="*" Binding="{Binding Product.ID}"/>

                                <DataGridTextColumn Header="Name Product" IsReadOnly="True" Width="*" Binding="{Binding Product.Name}"/>
                                <DataGridTextColumn Header="Quantity" IsReadOnly="True" Width="*" Binding="{Binding Quantity}"/>
                                <DataGridTextColumn Header="Total Price" IsReadOnly="True" Width="*" Binding="{Binding Price}"/>


                                <DataGridTemplateColumn Header="Edit" IsReadOnly="True" Width="70">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Command="{Binding DataContext.deleteItem, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding}">
                                                    <Icon:PackIconMaterial Kind="Delete" Background="Yellow"/>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                </Border>
                <Border Style="{StaticResource mainBorder}" Margin="200,10,10,5" Grid.Row="3" Grid.Column="1"  CornerRadius="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="TOTALL BILL" FontSize="20" Foreground="#ffffff" TextAlignment="Center" Margin="0 5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="ID Order:" FontSize="14" Foreground="#ffffff" TextAlignment="Right" Margin="10 5"/>
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Customer:" FontSize="14" Foreground="#ffffff" TextAlignment="Right" Margin="10 5"/>
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Address:" FontSize="14" Foreground="#ffffff" TextAlignment="Right" Margin="10 5"/>
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Phone:" FontSize="14" Foreground="#ffffff" TextAlignment="Right" Margin="10 5"/>
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Total Quantity:" FontSize="14" Foreground="#ffffff" TextAlignment="Right" Margin="10 5"/>
                        <Line Grid.Row="6" Grid.ColumnSpan="2" Stroke="Black" StrokeThickness="1" Stretch="Fill"  X2="1" Margin="10 20"/>


                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding IdOrder}" FontSize="14" Foreground="#ffffff" TextAlignment="Center" Margin="10 5"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding customer.Full_Name}" FontSize="14" Foreground="#ffffff" TextAlignment="Center" Margin="10 5"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding address}" FontSize="14" Foreground="#ffffff" TextAlignment="Center" Margin="10 5"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding customer.Phone}" FontSize="14" Foreground="#ffffff" TextAlignment="Center" Margin="10 5"/>
                        <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding newOrder.TotalQuantity}" FontSize="14" Foreground="#ffffff" TextAlignment="Center" Margin="10 5"/>

                        <TextBlock Grid.Row="7" Grid.Column="1" Text="Total Price:" FontSize="14" Foreground="#ffffff" TextAlignment="Center" Margin="10 5"/>
                        <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding newOrder.TotalPrice}" FontSize="14" Foreground="#ffffff" TextAlignment="Center" Margin="168,5,10,5"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>

</Window>

